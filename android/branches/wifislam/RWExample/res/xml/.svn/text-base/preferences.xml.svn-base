<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="Roundware Service Connection">
		<EditTextPreference
			android:title="Server URL"
			android:name="URL"
			android:defaultValue="http://rw.listenfaster.com"
			android:summary="URL of Roundware service. Please only modify if you know what you are doing! (restart required)"
			android:key="serverNamePref"
			/>
		<EditTextPreference
			android:title="Roundware Webpage"
			android:name="Roundware"
			android:defaultValue="/roundware/"
			android:summary="Roundware service webpage. Please only modify if you know what you are doing! (restart required)"
			android:key="serverPagePref"
			/>
		<CheckBoxPreference
			android:title="Use only WiFi connection"
			android:defaultValue="false"
			android:summary="Select to use only WiFi for connecting to the Roundware server."
			android:key="useOnlyWiFiPref"
			/>
	</PreferenceCategory>
	
	<PreferenceCategory android:title="App Debugging">
		<CheckBoxPreference
			android:title="Detailed Messages"
			android:defaultValue="false"
			android:summary="Enable or disable detailed messages"
			android:key="showDetailedMessagesPref"
			/>
		<EditTextPreference
			android:title="Mock Latitude"
			android:defaultValue="N/A"
			android:summary="Enter latitude of mock location"
			android:key="mockLocationLatitudePref"
			/>
		<EditTextPreference
			android:title="Mock Longitude"
			android:defaultValue="N/A"
			android:summary="Enter longitude of mock location"
			android:key="mockLocationLongitudePref"
			/>
	</PreferenceCategory>

	
</PreferenceScreen>
